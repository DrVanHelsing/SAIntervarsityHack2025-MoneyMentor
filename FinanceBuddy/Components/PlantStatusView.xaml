<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceBuddy.Components.PlantStatusView"
             x:Name="PlantStatusRoot">
    
    <Border BackgroundColor="#F0F8FF" 
            Stroke="#4169E1" 
            StrokeThickness="1"
            StrokeShape="RoundRectangle 10"
            Padding="12,8">
        
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
            
            <!-- Plant Image with Tap Gesture -->
            <Border Grid.Column="0" 
                    StrokeShape="RoundRectangle 8"
                    BackgroundColor="White"
                    Stroke="#32CD32"
                    StrokeThickness="2"
                    Padding="4">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPlantTapped" />
                </Border.GestureRecognizers>
                
                <Grid>
                    <Image x:Name="PlantImage" 
                           Source="{Binding PlantImageSource}"
                           WidthRequest="48" 
                           HeightRequest="48"
                           VerticalOptions="Center" />
                    
                    <!-- Level up celebration indicator -->
                    <Label x:Name="CelebrationIndicator"
                           Text="ðŸŽ‰"
                           FontSize="16"
                           IsVisible="{Binding HasRecentlyLeveledUp}"
                           HorizontalOptions="End"
                           VerticalOptions="Start"
                           Margin="-5,-5,0,0" />
                </Grid>
            </Border>
            
            <!-- Status Info -->
            <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                <Label x:Name="PlantStageLabel" 
                       Text="{Binding PlantStageText}"
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="#2E8B57" />
                
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                    <Label Grid.Column="0"
                           x:Name="PointsLabel" 
                           Text="{Binding PointsText}"
                           FontSize="12" 
                           TextColor="#666" />
                    
                    <Label Grid.Column="1"
                           x:Name="WellnessScoreLabel"
                           Text="{Binding WellnessScoreText}"
                           FontSize="11"
                           TextColor="#9370DB"
                           HorizontalOptions="End" />
                </Grid>
                
                <!-- Progress Bar for next stage -->
                <ProgressBar x:Name="ProgressToNext"
                            Progress="{Binding ProgressToNextStage}"
                            ProgressColor="#32CD32"
                            BackgroundColor="#E0E0E0"
                            HeightRequest="4" />
                
                <Label x:Name="ProgressLabel" 
                       Text="{Binding ProgressText}"
                       FontSize="10" 
                       TextColor="#888" />
            </StackLayout>
            
            <!-- Streak Info & Quick Stats -->
            <StackLayout Grid.Column="2" VerticalOptions="Center" HorizontalOptions="End" Spacing="2">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="2">
                    <!-- Streak -->
                    <Label Grid.Row="0" Grid.Column="0" 
                           Text="ðŸ”¥" FontSize="14" 
                           HorizontalOptions="Center" />
                    <Label Grid.Row="0" Grid.Column="1"
                           x:Name="StreakLabel" 
                           Text="{Binding StreakText}"
                           FontSize="11" 
                           FontAttributes="Bold"
                           TextColor="#FF6347"
                           HorizontalOptions="Center" />
                    
                    <!-- Wellness Activities -->
                    <Label Grid.Row="1" Grid.Column="0" 
                           Text="ðŸ“š" FontSize="14" 
                           HorizontalOptions="Center" />
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding LearningText}"
                           FontSize="11"
                           TextColor="#4169E1"
                           HorizontalOptions="Center" />
                </Grid>
                
                <!-- Tap hint -->
                <Label Text="Tap plant"
                       FontSize="8"
                       TextColor="#999"
                       HorizontalOptions="Center"
                       Opacity="0.7" />
            </StackLayout>
            
        </Grid>
    </Border>
    
</ContentView>