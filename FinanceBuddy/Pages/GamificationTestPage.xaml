<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:FinanceBuddy.Components"
             x:Class="FinanceBuddy.Pages.GamificationTestPage"
             Title="Plant Care">
    
    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*" Padding="16" RowSpacing="16">
            
            <!-- Plant Status -->
            <components:PlantStatusView x:Name="PlantStatus" Grid.Row="0" />
            
            <!-- Header -->
            <Border Grid.Row="1" 
                    StrokeShape="RoundRectangle 16" 
                    Stroke="Transparent"
                    Padding="20"
                    HeightRequest="80">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#32CD32" Offset="0.0" />
                        <GradientStop Color="#228B22" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0" 
                           Text="Grow Your Plant" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White" 
                           VerticalOptions="Center" />
                    
                    <Label Grid.Column="1" 
                           Text="🌱" 
                           FontSize="32" 
                           VerticalOptions="Center" />
                </Grid>
            </Border>
            
            <!-- Action Buttons -->
            <StackLayout Grid.Row="2" Spacing="12">
                
                <!-- Financial Learning Section -->
                <Label Text="📚 Financial Learning" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#2E8B57" 
                       Margin="0,12,0,8" />
                
                <Button Text="📕 Read Financial Lesson (+20 pts)"
                        BackgroundColor="#4169E1"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnReadLessonClicked" />
                
                <Button Text="🎓 Complete Weekly Review (+75 pts)"
                        BackgroundColor="#9370DB"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnWeeklyReviewClicked" />
                
                <!-- Goal Setting Section -->
                <Label Text="🎯 Goal Setting" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#2E8B57" 
                       Margin="0,12,0,8" />
                
                <Button Text="💰 Set Savings Goal (+40 pts)"
                        BackgroundColor="#FF8C00"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnSetGoalClicked" />
                
                <Button Text="☑️ Achieve Savings Goal (+100 pts)"
                        BackgroundColor="#32CD32"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnAchieveGoalClicked" />
                
                <!-- Budget Management Section -->
                <Label Text="💼 Budget Management" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#2E8B57" 
                       Margin="0,12,0,8" />
                
                <Button Text="📊 Set Budget (+25 pts)"
                        BackgroundColor="#FF6347"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnSetBudgetClicked" />
                
                <Button Text="🥳 Meet Budget Goal (+30 pts)"
                        BackgroundColor="#228B22"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnMeetBudgetClicked" />
                
                <!-- Milestone Section -->
                <Label Text="🏆 Special Rewards" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#2E8B57" 
                       Margin="0,12,0,8" />
                
                <Button Text="🎈 First Week Complete (+100 pts)"
                        BackgroundColor="#DAA520"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnFirstWeekClicked" />
                
                <Button Text="🔥 Force Streak Bonus (+50 pts)"
                        BackgroundColor="#DC143C"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnStreakBonusClicked" />
                
                <!-- Reset Section -->
                <Label Text="⚛️ Testing Tools" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#666" 
                       Margin="0,12,0,8" />
                
                <Button Text="🔄️ Reset Plant Progress"
                        BackgroundColor="#999"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnResetClicked" />
                
                <!-- Status Label -->
                <Label x:Name="StatusLabel" 
                       Text=""
                       FontSize="14" 
                       TextColor="#32CD32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,16,0,0" />
                
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>